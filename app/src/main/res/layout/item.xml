<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/main_layout_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/img"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:src="@drawable/dog"
    android:layout_marginRight="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/img"
        android:text="As FTX sinks, other crypto exchanges are showing their coins"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/img"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Crypto.com, Binance, and Coinbase are among the cryptocurrency exchanges trying to prove to customers that their funds are safe following the collapse of FTX."/>


</androidx.constraintlayout.widget.ConstraintLayout>